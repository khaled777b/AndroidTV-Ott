<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/weather_bg_1"
    android:orientation="vertical" >


    <com.hiveview.domybox.view.MyTextView
        android:id="@+id/tv_weather_district"
        android:layout_width="135dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textColor="#ffffff"
        android:layout_marginTop="10dip"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="北京"
        android:textSize="32sp" />
    <com.hiveview.domybox.common.image.ImageLoadView
        android:id="@+id/iv_weather"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@id/tv_weather_district"
        android:layout_marginLeft="80dip"
        android:src="@drawable/img_default" />
    <TextView
        android:id="@+id/tv_weather_temperature"
        android:layout_below="@id/iv_weather"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="2dip"
        android:textSize="22dip"
        android:textColor="#ffffff"
        android:text="18-36°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView 
        android:id="@+id/tv_weather_day"
        android:layout_below="@+id/tv_weather_temperature"
        android:textSize="22dip"
        android:text="白天"
        android:textColor="#ffffff"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
     
      <com.hiveview.domybox.view.MyTextView
        android:id="@+id/tv_weather_wind"
        android:textSize="22dip"
        android:text="风力"
        android:textColor="#ffffff"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="11dip"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_weather_day"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
