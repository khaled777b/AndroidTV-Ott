<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CC191919"
    android:layout_margin="30dip"
    android:orientation="vertical">
    
    <LinearLayout
	    android:id="@+id/ll_net_set_ip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="30dip"
	    android:layout_marginLeft="20dip"
	    android:layout_marginRight="20dip"
	    android:nextFocusDown="@+id/ll_forget_password"
	    android:background="@drawable/net_info_set_selector"
	    android:focusable="true"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:padding="2dip" >
	
	    <TextView
	        android:id="@+id/tv_netset_title"
	        android:layout_width="100dip"
	        android:layout_height="50dip"
	        android:background="#454545"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="28sp" />
	
	    <TextView
	        android:id="@+id/tv_netset_content"
	        android:layout_width="320dip"
	        android:layout_height="50dip"
	        android:background="#000000"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="30sp" />
	
	</LinearLayout>
	
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:focusable="true"
        android:layout_marginBottom="10dip">
	    
        
        <LinearLayout  android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:focusable="true"
	        android:layout_gravity="center">
	        
            <LinearLayout 
			    android:id="@+id/ll_forget_password"
			    android:nextFocusRight="@+id/ll_connect"
			    android:focusable="true"
			    android:padding="2dip"
                android:nextFocusUp="@+id/ll_net_set_ip"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/image_focus">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E90FF"
                    android:padding="10dip"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

			</LinearLayout>
			
            <LinearLayout 
			    android:id="@+id/ll_connect"
			    android:nextFocusLeft="@+id/ll_forget_password"
			    android:focusable="true"
                android:nextFocusUp="@+id/ll_net_set_ip"
			    android:layout_marginLeft="10dip"
			    android:padding="2dip"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/image_focus">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E90FF"
                    android:padding="10dip"
                    android:gravity="center"
                    android:text="   连接    "
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

			</LinearLayout>
            
        </LinearLayout>
       
    </FrameLayout>
    
</LinearLayout>
