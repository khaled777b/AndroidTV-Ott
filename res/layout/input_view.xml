<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="925dip"
    android:layout_height="359dip"
    android:background="#CC191919"
    android:orientation="vertical" >
	<TextView 
	    android:id="@+id/tv_change_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="30dip"
	    android:textColor="#ffffff"
	    android:text="修改盒子名称"
	    android:textSize="32sp"/>
	<LinearLayout
        android:id="@+id/ll_box_name"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginBottom="70dip"
        android:padding="1dip"
        android:background="#CC191919"
        android:orientation="horizontal" >
        <TextView 
          android:id="@+id/tv_box_name"
          android:layout_width="150dip"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="28sp"
	      android:text="盒子名称"
	      android:gravity="center"
	      android:background="@drawable/box_name1"/>
        <EditText
          android:id="@+id/tv_box_inputname"
          android:layout_width="360dip"
          android:layout_height="match_parent"
          android:background="#000000"
          android:textColor="#ffffff"
          android:textSize="24sp" />
        
    </LinearLayout>

</LinearLayout>
