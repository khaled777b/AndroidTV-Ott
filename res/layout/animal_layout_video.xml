<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_animal_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
     <LinearLayout
          android:id="@+id/ll_video_container"
          android:layout_width="140dip"
          android:layout_height="36dip"
          android:orientation="horizontal"
           >
 	    
 			<ImageView
	              android:id="@+id/iv_item_video_icon_1"
	              android:layout_width="46.66dip"
	              android:layout_height="36dip"
	              android:scaleType="fitXY"
	              android:src="@drawable/video_icon" />
	          
	          <ImageView
	              android:id="@+id/iv_item_video_icon_2"
	              android:layout_width="46.66dip"
	              android:layout_height="36dip"
	              android:scaleType="fitXY"
	              android:src="@drawable/video_icon" />
	           <ImageView
	              android:id="@+id/iv_item_video_icon_3"
	              android:layout_width="46.66dip"
	              android:layout_height="36dip"
	              android:scaleType="fitXY"
	              android:src="@drawable/video_icon" />
	           
	           <ImageView
	              android:id="@+id/iv_item_video_icon_4"
	              android:layout_width="46.66dip"
	              android:layout_height="36dip"
	              android:scaleType="fitXY"
	              android:src="@drawable/video_icon" />
	          
	      </LinearLayout>
  	   
   	      
   	      <ImageView 
   	        android:layout_centerHorizontal="true"
	        android:id="@+id/iv_item_video_frame_demo"
