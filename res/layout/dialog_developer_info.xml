<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="616.66dip"
    android:layout_height="450dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_app_dialog_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:text="name"
        android:textColor="#ffffff"
        android:textSize="40dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <com.hiveview.domybox.common.image.ImageLoadView
            android:id="@+id/iv_dialog_icon"
            android:layout_width="133.33dip"
            android:layout_height="133.33dip"
            android:src="@drawable/img_default" />

        <!-- 类型 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型  "
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_app_dialog_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无数据"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新 "
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_app_dialog_updata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无数据"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本 "
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_app_dialog_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无数据"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大小 "
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_app_dialog_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无数据"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发者 "
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_app_dialog_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无数据"
            android:textSize="21sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_app_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="140dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:maxLines="5"
        android:text="无数据"
        android:textSize="21sp" />

</LinearLayout>